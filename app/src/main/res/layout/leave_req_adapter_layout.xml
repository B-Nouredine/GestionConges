<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/lra_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:text="Leave Request Start"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="1"
                    />

                <ImageView
                    android:id="@+id/lra_arrow_lr"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/lra_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    android:text="Leave Request End"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="1"
                    />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/lra_statusHC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/status"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/lra_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/lra_statusHC"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/lra_status_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:icon="@drawable/pending"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />

    </LinearLayout>

</RelativeLayout>